<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_200"
    android:orientation="vertical"
    tools:context=".FirstFragment">


    <EditText
        android:id="@+id/etNameInput"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="16dp"
        android:ems="10"
        android:hint="Name Here"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:autofillHints="" />

    <EditText
        android:id="@+id/etLastNameInput"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        android:hint="Last Name Here"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/etNameInput"
        app:layout_constraintStart_toStartOf="@+id/etNameInput"
        app:layout_constraintTop_toBottomOf="@id/etNameInput"
        android:autofillHints="" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/black"
        android:textSize="150dp" />

</androidx.constraintlayout.widget.ConstraintLayout>